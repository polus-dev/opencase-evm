{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["ES2020", "ESNEXT"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "ts-node": { "transpileOnly": true },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
